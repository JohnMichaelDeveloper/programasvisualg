Algoritmo "MediaAritm"

Var

   nome, msg : caractere
    nota_1, nota_2, md: real
Inicio
      escreval("Informe o nome: ")
      leia(nome)
      escreval(" Primeira nota: ")
      leia(nota_1)
      escreval(" Segunda nota: ")
      leia(nota_2)
      md <- (nota_1 + nota_2)/2
      escreval (nome, " está com a média: ", md )

Fimalgoritmo