Algoritmo "Numero maior"

Var
   num: inteiro


Inicio
   escreval("Informe um numero: ")
   escreval("")
   leia(num)
   se(num mod 2 = 0 )entao
      escreval("")
      escreval("O número", num - 1, " é ímpar.")
   senao
      escreval("")
      escreval("O número ", num + 1," é par.")

   fimse


Fimalgoritmo